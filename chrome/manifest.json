{
  "name": "Sample Ratio Mismatch Checker",
  "short_name": "SRM Check",
  "version": "0.0.0.1",
  "description": "Automatically performs SRM test and flags potential issues on supported experimentation platforms.",
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
   {
     "matches": ["https://lukasvermeer.github.io/srm/*",
                 "https://optimize.google.com/*"],
     "js": ["lib/jstat.min.js", "content.js"]
   }
 ],
  "background": {
    "scripts": [ "background.js" ]
  },
  "icons": {
    "128": "icon128.png"
  },
  "manifest_version": 2
}
